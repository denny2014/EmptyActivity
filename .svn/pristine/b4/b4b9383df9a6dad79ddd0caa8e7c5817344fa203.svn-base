<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_type"
    android:clipChildren="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_type_padding"
            android:src="@drawable/btn_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_type_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="3" >

            <TextView
                android:id="@+id/btn_type_1"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/img_menu_item_1"
                android:text="@string/activity_type_item_01" />

            <TextView
                android:id="@+id/btn_type_2"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/img_menu_item_2"
                android:text="@string/activity_type_item_02" />

            <TextView
                android:id="@+id/btn_type_3"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/img_menu_item_3"
                android:text="@string/activity_type_item_03" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_type_margin_top"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="3" >

            <TextView
                android:id="@+id/btn_type_5"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/img_menu_item_4"
                android:text="@string/activity_type_item_05"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_type_4"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/img_menu_item_5"
                android:text="@string/activity_type_item_04"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_type_6"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:clickable="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/img_menu_item_6"
                android:text="@string/activity_type_item_06" />

            <TextView
                android:id="@+id/btn_type_7"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:clickable="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/img_menu_item_7"
                android:text="@string/activity_type_item_07" />

            <TextView
                android:id="@+id/btn_type_8"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:clickable="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/img_menu_item_8"
                android:text="@string/activity_type_item_08" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_type_margin_top"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="3" >

            <TextView
                android:id="@+id/btn_type_9"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/img_menu_item_9"
                android:text="@string/activity_type_item_09" />

            <TextView
                android:id="@+id/btn_type_10"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/img_menu_item_10"
                android:text="@string/activity_type_item_10" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>