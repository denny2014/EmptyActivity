<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simple_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llt_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_top_right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main_back"
            android:clickable="true"
            android:paddingBottom="@dimen/activity_search_top_padding_top"
            android:paddingLeft="@dimen/activity_search_top_padding"
            android:paddingRight="@dimen/activity_search_top_padding"
            android:paddingTop="@dimen/activity_search_top_padding_top"
            android:text="@string/activity_search_back"
            android:textColor="@color/white"
            android:textSize="@dimen/text_mediumn_small" />

        <View
            android:layout_width="@dimen/dialog_line_width"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingBottom="@dimen/activity_search_top_padding_top"
            android:paddingLeft="@dimen/activity_search_top_padding"
            android:paddingRight="@dimen/activity_search_top_padding"
            android:paddingTop="@dimen/activity_search_top_padding_top"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/text_mediumn_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sjx_layout_002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_search_top_padding"
        android:layout_marginRight="@dimen/activity_search_top_padding"
        android:layout_marginTop="@dimen/activity_search_top_padding_top"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发件人 :"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_search_input_padding_left" />

        <TextView
            android:id="@+id/sjx_yj_fjr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_search_input_padding_left" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sjx_layout_003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_search_top_padding"
        android:layout_marginRight="@dimen/activity_search_top_padding"
        android:layout_marginTop="@dimen/activity_search_top_padding_top"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人 :"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_search_input_padding_left" />

        <TextView
            android:id="@+id/sjx_yj_sjr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_search_input_padding_left" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyout_caosong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_search_top_padding"
        android:layout_marginRight="@dimen/activity_search_top_padding"
        android:layout_marginTop="@dimen/activity_search_top_padding_top"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抄  送  :"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_search_input_padding_left" />

        <TextView
            android:id="@+id/sjx_yj_cs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_search_input_padding_left" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sjx_layout_005"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_search_top_padding"
        android:layout_marginRight="@dimen/activity_search_top_padding"
        android:layout_marginTop="@dimen/activity_search_top_padding_top"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送时间 :"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_search_input_padding_left" />

        <TextView
            android:id="@+id/sjx_yj_fssj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_search_input_padding_left" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_detail_padding_left_right"
            android:paddingLeft="@dimen/activity_detail_padding_left_right"
            android:paddingRight="@dimen/activity_detail_padding_left_right" >

            <WebView
                android:id="@+id/email_text_view_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/email_text_textview_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>