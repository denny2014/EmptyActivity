<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--登录项名称样式，如用户名、密码-->
  <style name="style_login_text">
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:padding">@dimen/activity_login_text_padding</item>
  </style>

  <!--登录界面输入框的样式-->
  <style name="style_login_edit">
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:background">@null</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:paddingRight">@dimen/activity_login_text_padding</item>
    <item name="android:paddingTop">@dimen/activity_login_text_padding</item>
    <item name="android:paddingBottom">@dimen/activity_login_text_padding</item>
    <item name="android:textColorHint">@color/gray</item>
    <item name="android:ems">20</item>
    <item name="android:singleLine">true</item>
  </style>

  <!--类型页面按钮的样式-->
  <style name="style_type_button">
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!--类型页面按钮的样式_登录版-->
  <style name="style_type_button_login">
    <item name="android:textSize">@dimen/text_large</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/btn_login</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">@dimen/activity_type_item_height</item>
  </style>

  <style name="style_modify_pass_dialog"
         parent="my_dialog">
    <item name="android:backgroundDimEnabled">true</item>
  </style>

</resources>