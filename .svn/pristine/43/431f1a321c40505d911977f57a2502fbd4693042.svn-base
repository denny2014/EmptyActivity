<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:weightSum="3"
              android:background="@color/translucent"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_height="match_parent">

  <LinearLayout
    android:id="@+id/llt_modify_pass"
    android:layout_width="0dp"
    android:layout_weight="3"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_modify_pass">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/activity_modify_pass_inner_padding"
      android:layout_marginRight="@dimen/activity_modify_pass_inner_padding"
      android:layout_marginTop="@dimen/activity_modify_pass_inner_padding"
      android:background="@drawable/bg_login_input"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_login_text"
        android:text="@string/activity_modify_pass_username"/>

      <EditText
        android:id="@+id/et_username"
        style="@style/style_login_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/activity_modify_pass_inner_padding"
      android:layout_marginRight="@dimen/activity_modify_pass_inner_padding"
      android:layout_marginTop="@dimen/activity_modify_pass_inner_padding"
      android:background="@drawable/bg_login_input"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_login_text"
        android:text="@string/activity_modify_pass_old"/>

      <EditText
        android:id="@+id/et_oldpass"
        style="@style/style_login_edit"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_marginLeft="@dimen/activity_modify_pass_inner_padding"
      android:layout_marginRight="@dimen/activity_modify_pass_inner_padding"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/activity_modify_pass_inner_padding"
      android:background="@drawable/bg_login_input"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_login_text"
        android:text="@string/activity_modify_pass_new"/>

      <EditText
        style="@style/style_login_edit"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:id="@+id/et_newpass"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/activity_modify_pass_inner_padding"
      android:layout_marginRight="@dimen/activity_modify_pass_inner_padding"
      android:layout_marginTop="@dimen/activity_modify_pass_inner_padding"
      android:background="@drawable/bg_login_input"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_login_text"
        android:text="@string/activity_modify_pass_ensure"/>

      <EditText
        style="@style/style_login_edit"
        android:inputType="textPassword"
        android:id="@+id/et_passensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:padding="@dimen/activity_modify_pass_inner_padding"
      android:layout_height="wrap_content">

      <Button
        android:id="@+id/btn_modify"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        android:layout_marginRight="@dimen/activity_modify_pass_inner_padding"
        android:background="@drawable/btn_modify"
        android:paddingLeft="@dimen/activity_login_submit_padding_left"
        android:paddingRight="@dimen/activity_login_submit_padding_left"
        android:paddingTop="@dimen/activity_login_text_padding"
        android:paddingBottom="@dimen/activity_login_text_padding"
        android:text="@string/activity_modify_pass_modify"/>

      <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        android:layout_marginLeft="@dimen/activity_modify_pass_inner_padding"
        android:background="@drawable/btn_modify_cancel"
        android:paddingLeft="@dimen/activity_login_submit_padding_left"
        android:paddingRight="@dimen/activity_login_submit_padding_left"
        android:paddingTop="@dimen/activity_login_text_padding"
        android:paddingBottom="@dimen/activity_login_text_padding"
        android:text="@string/activity_modify_pass_cancel"/>
    </LinearLayout>

  </LinearLayout>


</LinearLayout>