<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:id="@+id/llt_tiyao"
              android:layout_width="match_parent"
              android:gravity="top|left"
              android:paddingTop="@dimen/activity_detail_item_margin_top"
              android:layout_height="match_parent">

  <TextView
    android:layout_width="wrap_content"
    android:textSize="@dimen/text_mediumn"
    android:textColor="@color/black"
    android:lineSpacingMultiplier="1.3"
    android:gravity="center"
    android:id="@+id/tv_tiyao_name"
    android:layout_height="wrap_content"/>

  <com.zet.view.EnhanceWordWrapTextView
    android:layout_width="wrap_content"
    android:textSize="@dimen/text_mediumn_small"
    android:textColor="@color/black"
    android:layout_weight="1"
    android:singleLine="false"
    android:lineSpacingMultiplier="1.3"
    android:layout_marginLeft="@dimen/activity_detail_item_content_margin_left"
    android:id="@+id/tv_tiyao_content"
    android:layout_height="wrap_content"/>

</LinearLayout>