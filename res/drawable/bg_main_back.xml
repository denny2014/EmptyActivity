      </item>
      <item android:right="@dimen/activity_login_corner">
        <shape
          android:shape="rectangle">
          <solid android:color="@color/c_btn_login_sel"/>
        </shape>
      </item>
      <item android:top="@dimen/activity_login_corner">
        <shape
          android:shape="rectangle">
          <solid android:color="@color/c_btn_login_sel"/>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>
