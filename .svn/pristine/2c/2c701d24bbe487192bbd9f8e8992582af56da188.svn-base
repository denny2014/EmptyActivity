<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/action_top" />

    <RelativeLayout
        android:id="@+id/llt_modify_pass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/repassword_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/activity_modify_pass_inner_padding"
            android:layout_marginRight="@dimen/activity_modify_pass_inner_padding"
            android:layout_marginTop="@dimen/activity_modify_pass_inner_padding"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_modify_pass_username" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/gray"
                android:paddingBottom="1dp"
                android:paddingTop="1dp" />

            <EditText
                android:id="@+id/et_username"
                style="@style/style_login_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:id="@+id/repassword_02"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/repassword_01"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/repassword_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repassword_02"
            android:layout_marginLeft="@dimen/activity_modify_pass_inner_padding"
            android:layout_marginRight="@dimen/activity_modify_pass_inner_padding"
            android:layout_marginTop="@dimen/activity_modify_pass_inner_padding"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_modify_pass_old" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/gray"
                android:paddingBottom="1dp"
                android:paddingTop="1dp" />

            <EditText
                android:id="@+id/et_oldpass"
                style="@style/style_login_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:id="@+id/repassword_04"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/repassword_03"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/repassword_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repassword_04"
            android:layout_marginLeft="@dimen/activity_modify_pass_inner_padding"
            android:layout_marginRight="@dimen/activity_modify_pass_inner_padding"
            android:layout_marginTop="@dimen/activity_modify_pass_inner_padding"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_modify_pass_new" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/gray"
                android:paddingBottom="1dp"
                android:paddingTop="1dp" />

            <EditText
                android:id="@+id/et_newpass"
                style="@style/style_login_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:id="@+id/repassword_06"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/repassword_05"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/repassword_07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repassword_06"
            android:layout_marginLeft="@dimen/activity_modify_pass_inner_padding"
            android:layout_marginRight="@dimen/activity_modify_pass_inner_padding"
            android:layout_marginTop="@dimen/activity_modify_pass_inner_padding"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_modify_pass_ensure" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/gray"
                android:paddingBottom="1dp"
                android:paddingTop="1dp" />

            <EditText
                android:id="@+id/et_passensure"
                style="@style/style_login_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:id="@+id/repassword_08"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/repassword_07"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_modify_pass_inner_padding"
            android:paddingRight="@dimen/activity_modify_pass_inner_padding"
            android:paddingBottom="5dp" >

            <Button
                android:id="@+id/btn_modify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_login_text_margin_top"
                android:background="@drawable/btn_login"
                android:paddingBottom="@dimen/activity_login_text_padding"
                android:paddingLeft="@dimen/activity_login_submit_padding_left"
                android:paddingRight="@dimen/activity_login_submit_padding_left"
                android:paddingTop="@dimen/activity_login_text_padding"
                android:text="@string/activity_modify_pass_modify"
                android:textColor="@color/white"
                android:textSize="@dimen/text_mediumn" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_modify_pass_inner_padding"
                android:layout_weight="1"
                android:background="@drawable/btn_modify_cancel"
                android:paddingBottom="@dimen/activity_login_text_padding"
                android:paddingLeft="@dimen/activity_login_submit_padding_left"
                android:paddingRight="@dimen/activity_login_submit_padding_left"
                android:paddingTop="@dimen/activity_login_text_padding"
                android:text="@string/activity_modify_pass_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>