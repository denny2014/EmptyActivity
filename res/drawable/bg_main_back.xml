<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <layer-list>
      <item>
        <shape
          android:shape="rectangle">
          <corners android:radius="@dimen/activity_login_corner"/>
          <solid android:color="@color/c_btn_login_nor"/>
        </shape>
      </item>
      <item android:right="@dimen/activity_login_corner">
        <shape
          android:shape="rectangle">
          <solid android:color="@color/c_btn_login_nor"/>
        </shape>
      </item>
      <item android:top="@dimen/activity_login_corner">
        <shape
          android:shape="rectangle">
          <solid android:color="@color/c_btn_login_nor"/>
        </shape>
      </item>
    </layer-list>
  </item>
  <item android:state_pressed="true">
