<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_type"
    android:clipChildren="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/activity_type_padding"
            android:src="@drawable/btn_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_type_margin_top"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="70dip"
        android:paddingRight="70dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="40dip"
            android:paddingRight="40dip" >

            <TextView
                android:id="@+id/btn_type_1"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/img_menu_item_11"
                android:text="@string/activity_type_item_01" />

            <TextView
                android:id="@+id/btn_type_2"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/img_menu_item_22"
                android:text="@string/activity_type_item_02" />

            <TextView
                android:id="@+id/btn_type_3"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/img_menu_item_33"
                android:text="@string/activity_type_item_03" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dip"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            android:weightSum="3" >

            <TextView
                android:id="@+id/btn_type_5"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/img_menu_item_44"
                android:text="@string/activity_type_item_05" />

            <TextView
                android:id="@+id/btn_type_4"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/img_menu_item_55"
                android:text="@string/activity_type_item_04" />

            <TextView
                android:id="@+id/btn_type_6"
                style="@style/style_type_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@drawable/img_menu_item_66"
                android:text="@string/activity_type_item_06" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>