<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal|center_vertical"
    android:background="@drawable/first_image_parting_line"
    android:orientation="vertical"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btn_type_1"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/img_menu_item_1_new" />

            <TextView
                style="@style/style_type_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="@string/activity_type_item_01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btn_type_2"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/img_menu_item_2_new" />

            <TextView
                style="@style/style_type_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="@string/activity_type_item_02" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btn_type_3"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/img_menu_item_3_new" />

            <TextView
                style="@style/style_type_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="@string/activity_type_item_03" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btn_type_5"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/img_menu_item_4_new" />

            <TextView
                style="@style/style_type_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/activity_type_item_05" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btn_type_4"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/img_menu_item_5_new" />

            <TextView
                style="@style/style_type_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/activity_type_item_04" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btn_type_6"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/img_menu_item_6_new" />

            <TextView
                style="@style/style_type_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="@string/activity_type_item_06" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>