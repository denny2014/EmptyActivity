<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/activity_search_item_padding_left"
              android:paddingRight="@dimen/activity_search_item_padding_left"
              android:paddingTop="@dimen/activity_search_item_padding_top"
              android:paddingBottom="@dimen/activity_search_item_padding_top"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <TextView
    android:id="@+id/tvResultName"
    android:layout_width="0dp"
    android:layout_weight="4"
    android:textSize="@dimen/text_mediumn_small"
    android:textColor="@color/black"
    android:text="标题"
    android:layout_height="wrap_content"/>

  <TextView
    android:id="@+id/tvResultYear"
    android:text="2015"
    android:layout_weight="1"
    android:gravity="center"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_search_item_padding_left"
    android:textColor="#00CCF5"
    android:textSize="@dimen/text_small"
    />

</LinearLayout>